@model ViewCarDto
@{
    int i = 1;
}

<form method="get" asp-action="index">
    <span>Max</span>
    <input type="number" name="max" placeholder="Max price" />
    <span>Min</span>
    <input type="number" name="min" placeholder="Min price" />
    <span>Sort by</span>
    <select name="sort">
        <option >Model</option>
        <option>Name</option>
        <option>Price</option>
        <option>Year</option>
    </select>
    <button type="submit">Search</button>
</form>




<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">
                Model
            </th>
            <th scope="col">
                Name
            </th>
            <th scope="col">
                Price
            </th>
            <th scope="col">
                Year
            </th>
            <th scope="col">Color</th>
            <th scope="col">Delete</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var res in Model.Cars)
        {
            <tr>
                <th scope="row">@i</th>
                <td>@res.Model</td>
                <td>@res.Name</td>
                <td>@res.Price</td>
                <td>@res.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>@res.Color</td>
                <td>
                    <form asp-controller="Home" asp-action="Delete" asp-route-Id="@res.Id" method="post" style="display: inline-block">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
            i++;
        }

    </tbody>
</table>
